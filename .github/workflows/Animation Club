    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // UPDATED: Removed 'suggestions'
            const pages = ['home', 'about', 'tools', 'guide', 'updates'];
            const header = document.querySelector('header');

            /**
             * Manages the visibility of sections based on the URL hash.
             */
            function showPageFromHash() {
                // Get the current hash, defaulting to 'home' if empty
                let hash = window.location.hash.replace('#', '');
                if (!pages.includes(hash)) {
                    hash = 'home';
                }

                // If the hash is not set correctly, set it and let the hashchange event handle the rest
                if (window.location.hash.replace('#', '') !== hash) {
                    window.location.hash = hash;
                    return;
                }

                // Scroll the window to the very top when switching pages
                window.scrollTo({ top: 0, behavior: 'auto' });

                pages.forEach(pageId => {
                    const section = document.getElementById(pageId);
                    const link = document.querySelector(`a[href="#${pageId}"]`);

                    if (section) {
                        if (pageId === hash) {
                            // Show the active page and add animation class
                            section.classList.remove('hidden');
                            section.classList.add('active'); // Activates the section-fade-in animation
                        } else {
                            // Hide all other pages and remove animation class
                            section.classList.add('hidden');
                            section.classList.remove('active');
                        }
                    }

                    if (link) {
                        // Highlight the active navigation link
                        if (pageId === hash) {
                            link.classList.add('bg-slate-700/50', 'text-cyan-300');
                            link.classList.remove('text-white');
                        } else {
                            link.classList.remove('bg-slate-700/50', 'text-cyan-300');
                            link.classList.add('text-white');
                        }
                    }
                });

                // Ensure header styles are always applied
                header.classList.add('liquid-glass', 'shadow-xl');
                window.onscroll = null;
            }

            // Bind the page loading logic
            window.addEventListener('hashchange', showPageFromHash);
            showPageFromHash(); // Initial call to load the correct page
        });
    </script>

</body>
